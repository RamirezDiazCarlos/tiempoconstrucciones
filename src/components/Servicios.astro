<style>
  .servicios {
    background-color: var(--color-surface);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .servicios-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: var(--space-lg);
  }

  .servicio-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .servicio-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .servicio-header {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .servicio-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .servicio-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-lg);
    background: linear-gradient(to top, rgba(0,0,0,0.85), rgba(0,0,0,0.3));
  }

  .servicio-overlay h3 {
    color: white;
    margin: 0 0 var(--space-xs) 0;
    font-size: 1.75rem;
  }

  .servicio-tagline {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    margin: 0;
  }

  .servicio-content {
    padding: var(--space-lg);
  }

  .servicio-intro {
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
    color: var(--color-text);
  }

  .servicio-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .highlight {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-sm);
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    gap: var(--space-xs);
  }

  .highlight-icon {
    font-size: 1.5rem;
  }

  .highlight span:last-child {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .info-badge {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-sm);
    margin-bottom: var(--space-lg);
    font-size: 0.9rem;
  }

  .info-badge strong {
    color: #856404;
  }

  /* Acordeones */
  .accordion {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-sm);
    overflow: hidden;
  }

  .accordion summary {
    padding: var(--space-md);
    background: var(--color-surface);
    cursor: pointer;
    font-weight: 600;
    color: var(--color-primary);
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: background 0.2s ease;
  }

  .accordion summary::-webkit-details-marker {
    display: none;
  }

  .accordion summary::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 300;
    transition: transform 0.2s ease;
  }

  .accordion[open] summary::after {
    transform: rotate(45deg);
  }

  .accordion summary:hover {
    background: var(--color-border);
  }

  .accordion-content {
    padding: var(--space-md);
    background: white;
  }

  .spec-category {
    margin-bottom: var(--space-md);
  }

  .spec-category:last-child {
    margin-bottom: 0;
  }

  .spec-category h4 {
    color: var(--color-accent);
    font-size: 1rem;
    margin-bottom: var(--space-sm);
    padding-bottom: var(--space-xs);
    border-bottom: 2px solid var(--color-surface);
  }

  .spec-category ul {
    list-style: none;
    padding: 0;
  }

  .spec-category li {
    padding: var(--space-xs) 0;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.6;
    color: var(--color-text-light);
  }

  .spec-category li::before {
    content: "‚Ä¢";
    position: absolute;
    left: 0.5rem;
    color: var(--color-accent);
    font-weight: bold;
  }

  .exclusions-list {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-xs);
  }

  .exclusions-list li {
    padding: var(--space-xs) 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--color-text-light);
    font-size: 0.95rem;
  }

  .exclusions-list li::before {
    content: "‚àí";
    position: absolute;
    left: 0.5rem;
    color: var(--color-text-light);
  }

  .btn-servicio {
    display: block;
    width: 100%;
    padding: var(--space-md);
    background: var(--color-accent);
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    margin-top: var(--space-lg);
    transition: all 0.2s ease;
  }

  .btn-servicio:hover {
    background: #234d23;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  @media (max-width: 768px) {
    .servicios-grid {
      grid-template-columns: 1fr;
    }

    .servicio-header {
      height: 220px;
    }

    .servicio-content {
      padding: var(--space-md);
    }

    .servicio-highlights {
      grid-template-columns: repeat(2, 1fr);
    }

    .exclusions-list {
      grid-template-columns: 1fr;
    }
  }
</style>
